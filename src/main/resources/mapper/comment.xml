<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.Lwoo.mapper.AdminMapper">
    	<insert id="add" parameterType="Comment">
    		insert into comment(uid,comment) values(#{uid},#{comment})
    	</insert>
    	<delete id="delete" parameterType="Comment">
    		delete from comment where id=#{id}
    	</delete>
    	<select id="get" parameterType="_int" resultType="Admin">
    		select * from comment where id=#{id}
    	</select>
    	<select id="list" resultType="Comment">
    	select * from comment order by id desc
    	</select>
    </mapper>