<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.Lwoo.mapper.UserMapper">
    	<insert id="add" parameterType="User">
    		insert into user(username,password,sex,email,statu,assoId) values(#{username},#{password},#{sex},#{email},#{statu},#{assoId})
    	</insert>
    	<delete id="delete" parameterType="User">
    		delete from user where id=#{id}
    	</delete>
    	<select id="get" parameterType="_int" resultType="User">
    		select * from user where id=#{id}
    	</select>
    	<update id="update" parameterType="User">
    		update user set username=#{username},password=#{password},sex=#{sex},email=#{email},statu=#{statu},assoId=#{assoId} where id=#{id}
    	</update>
    	<select id="list" resultType="User">
    	select * from user order by id desc
    	</select>
    	<select id="checkLogin" parameterType="string" resultType="User">
    		select * from user where username=#{username} and password=#{password}
    	</select>
    	<!-- findByUsername -->
    	<select id="findByUsername" parameterType="String" resultType="User">
    		select * from user where username=#{username}
    	</select>
    	<select id="search" parameterType="string" resultType="User">
    	select * from user  where username like "%"#{fingData}"%"
    	</select>
    	<select id="findByEmail" parameterType="string" resultType="User">
    		select * from User where email=#{email}
    	</select>
    	<select id="getListByAssoId" parameterType="_int" resultType="User">
    		select * from User where assoId=#{assoId}
    	</select>
    	<select id="getListNostatu" parameterType="_int" resultType="User">
    		select * from User where assoId=#{assoId} and statu=#{statu}
    	</select>
    </mapper>